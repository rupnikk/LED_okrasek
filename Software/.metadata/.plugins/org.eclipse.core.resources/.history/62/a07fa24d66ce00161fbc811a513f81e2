#include <avr/io.h>
#include <avr/iom328.h>
#include "stdint.h"
#include "bittop.h"
#include "blink.h"
#include "hardware.h"
#include "timer.h"


void TimerCfg(){
	PrescalerCfg();

};

void PrescalerCfg(){
	SETBIT(CLKPR, CLKPCE);
	CLEARBITS(CLKPR, CLKPS0 | CLKPS1 | CLKPS2 | CLKPS3);
	//SETBITS(CLKPR, CLKPS0 | CLKPS1); //iz 8MHz na 1 MHz
	CLEARBIT(CLKPR, CLKPCE);
};
